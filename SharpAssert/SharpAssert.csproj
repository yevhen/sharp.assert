<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        
        <!-- Package metadata -->
        <PackageId>SharpAssert</PackageId>
        <Title>SharpAssert</Title>
        <Description>Pytest-style assertions library for .NET with C# 12 interceptors for enhanced error messages</Description>
        <PackageTags>testing;assertions;interceptors;pytest</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>

    </PropertyGroup>

    <ItemGroup>
        <!-- Include README in package -->
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
